{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "baseUrl": "./",
    "types": ["bootstrap", "@popperjs/core"]
  },
  "include": ["ts/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
